sentence = input("Enter sentence: ")
print(f"\nAll caps: {sentence.upper()}")

words = sentence.split()
print(f"Word count: {len(words)}")

reversed_chars = sentence[::-1]
print(f"Reversed character: {reversed_chars}")

reversed_words = " ".join(words[::-1])
print(f"Reversed words: {reversed_words}")

sentencetwo = input("Enter a sentence: ").lower().strip()
words = sentencetwo.split() # splits on the spaces

word_count = {} # create empty dictionary

for word in words:
    if word in word_count:
        word_count[word] += 1
    else:
        word_count[word] = 1

print("Word counts: ")
for word, count in word_count.items():
    print(f"{word}: {count}")

# OR 
# from collections import Counter
# word_count = Counter(words)
# print(word_count)

def unique_word_finder():
    sentencethr = input("Enter a sentence: ").strip().lower()
    words = sentencethr.split()
    unique = set(words)
    print("Unique words:", ", ".join(sorted(unique)))
    print(f"Total unique words: {len(unique)}")

unique_word_finder()
